
<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="/css/feed.css">
    <script src="https://kit.fontawesome.com/b341104090.js" crossorigin="anonymous"></script>
</head>

  <header class="top">
   <h1><i class="fa-solid fa-martini-glass-citrus"></i>Top Mix</h1>
   <section class="nav">
    <a href="/feed"><i class="fa-solid fa-house"></i></a>
    <a href="/recipe"><i class="fa-solid fa-book-open"></i></a>
    <a href="/upload"><i class="fa-solid fa-plus"></i></a>
    <a href="/favorite"><i class="fa-sharp fa-solid fa-bookmark"></i></a>
    <a href="/profile"><i class="fa-solid fa-user"></i></a>
   </section>
  </header>
  <h2>Feed</h2>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>"><i class="fa-solid fa-heart"></i><i class="fa-solid fa-comment"></i>
            </a>
          </li>
          <div class="col-3 mt-5">
            <p><%= posts[i].drinkName %></p>
          </div>
        <% } %>
        </ul>
        <form action="/feed" method="GET" id="sortForm">
         <input type ="radio" name="sort" value="sortByLikes" class="buttonOne">
         <label for="sortByLikes">sort by popularity</label>
         <input type ="radio" name="sort" value="sortByRecent" class="buttonOne">
         <label for="sortByRecent">sort by most recent</label>
        </form>
    </div>
  </div>  
<script type="text/javascript" src="feed.js"></script>